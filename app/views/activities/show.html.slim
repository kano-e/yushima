nav
  .nav-wrapper
    .container
      = link_to 'Actvities', activities_path, class: 'breadcrumb'
      span.breadcrumb Show Activity
.section.no-pad-bot
  .container = concept('activity/cell', @model).()

.section
  .container
    .row
      = concept('activity_comment/cell', collection: @activity_comments).(:index)
    .row#activity-comment-form
      - if signed_in?
        == render partial: 'activity_comments/form', locals: { form: @activity_comment_form, model: @activity_comment_form.model }
javascript:
  var feedmatic = {
    event: 'ViewContent',
    content_ids: [#{raw @activity_comments.first(10).map { |c| "'activity_comment_#{c.id}'" }.join(',')}]
  };

- content_for :head do
  = concept('activity/cell', @model).(:meta)
